{
  "name": "jobs",
  "version": "0.0.0",
  "description": "web app",
  "repository": "private",
  "license": "MIT",
  "scripts": {
    "exec": "exec",
    "clean": "rm -rf tmp dist",
    "dist": "npm run build && npm run static && cp tmp/bundle/* tmp/src && mv tmp/src dist",
    "static": "mkdir -p tmp/static && find src -type f -not -iname '*.scss' -not -iname '*.js' -not -iregex 'src/components/.*.html$' | cpio -pdm tmp/",
    "eslint": "eslint --config .eslintrc src/ ",
    "babel": "mkdir -p tmp/js && babel src --babelrc .babelrc --out-dir tmp/js",
    "babel-prod": "npm run babel -- --compact true --no-comments",
    "babel-devel": "npm run babel -- --source-maps inline",
    "sass": "mkdir -p tmp/css && node-sass src/ --output tmp/css/ --recursive",
    "sass-prod": "npm run sass -- --output-style compressed",
    "sass-devel": "npm run sass -- --source-map-embed --source-map-contents --source-map true",
    "webpack": "webpack --config .webpack.babel.js --progress --colors",
    "compile-prod": "npm run babel-prod && npm run sass-prod",
    "compile-devel": "npm run babel-devel && npm run sass-devel",
    "build": "npm run eslint && npm run clean && npm run compile-prod && npm run webpack",
    "watch-sass": "npm run sass-devel -- --watch",
    "watch-babel": "npm run babel-devel -- --watch",
    "watch-pack": "webpack --config .webpack.babel.js --watch --progress --colors",
    "browser": "browser-sync --config .browser-sync.js start",
    "watch": "npm run watch-babel & npm run watch-sass & npm run watch-pack & npm run webdriver & (sleep 10 && (npm run browser & npm run karma))",
    "dev": "npm run clean && npm run compile-devel && npm run watch",
    "webdriver": "webdriver-manager start </dev/null 2>/dev/null",
    "protractor": "protractor .protractor.conf.js",
    "e2e": "npm run protractor",
    "karma": "mkdir -p tmp/bundle && touch tmp/bundle/index.js && karma start .karma.conf.js",
    "test": "npm run build && npm run karma -- --single-run --no-auto-watch"
  },
  "dependencies": {
    "@cycle/core": "^3.1.0",
    "@cycle/dom": "^5.0.1",
    "rx": "^3.1.0"
  },
  "devDependencies": {
    "babel": "^5.6.23",
    "babel-core": "^5.8.19",
    "babel-eslint": "^3.1.23",
    "babel-loader": "^5.3.2",
    "browser-sync": "^2.7.13",
    "clean-webpack-plugin": "^0.1.3",
    "compression-webpack-plugin": "^0.2.0",
    "css-loader": "^0.15.5",
    "dotenv": "^1.2.0",
    "elm": "^2.0.0",
    "eslint": "^0.24.1",
    "eslint-plugin-react": "^2.7.1",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.4",
    "html-loader": "^0.3.0",
    "html-webpack-plugin": "^1.6.0",
    "jasmine-core": "^2.3.4",
    "karma": "^0.13.2",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^0.2.0",
    "node-sass": "^3.2.0",
    "nodemon": "^1.4.0",
    "phantomjs": "^1.9.17",
    "protractor": "^2.1.0",
    "raw-loader": "^0.5.1",
    "sass-loader": "^1.0.2",
    "style-loader": "^0.12.3",
    "url-loader": "^0.5.6",
    "webdriver-manager": "^7.0.1",
    "webpack": "^1.10.1",
    "webpack-merge": "^0.1.2"
  }
}
